<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"

	android:layout_width = "match_parent"
	android:layout_height = "wrap_content"
	android:orientation = "vertical">

	<ImageView
		android:layout_width = "match_parent"
		android:layout_height = "1px"
		android:layout_weight = "0"
		android:scaleType = "fitXY"
		android:src = "@color/divider_normal" />

	<RelativeLayout
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_weight = "1">

		<ImageView
			android:id = "@+id/tab_bg"
			android:layout_width = "match_parent"
			android:layout_height = "48dp"
			android:src = "@color/white" />

		<RelativeLayout
			android:id = "@+id/tab_normal"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_centerInParent = "true">

			<ImageView
				android:id = "@+id/tab_icon_normal"
				android:layout_width = "29dp"
				android:layout_height = "25dp"
				android:scaleType="fitCenter"
				android:layout_centerHorizontal="true"
				android:padding = "2dp"
				android:src = "@drawable/selector_tab_icon_menu2" />

			<TextView
				android:id = "@+id/tab_text_normal"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_below="@+id/tab_icon_normal"
				android:text = "标题"
				android:layout_centerHorizontal="true"
				android:textColor = "@drawable/selector_tab_text_main_2"
				android:textSize = "11sp" />

		</RelativeLayout>

		<TextView
			android:id = "@+id/tab_msg_mark"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_alignRight = "@+id/tab_normal"
			android:layout_marginTop="2dp"
			android:layout_marginRight="-7dp"
			android:background = "@drawable/shape_circle_red"
			android:gravity = "center"
			android:minHeight = "18dp"
			android:minWidth = "18dp"
			android:text = ""
			android:textColor = "@color/white"
			android:textSize = "12sp"
			android:textStyle = "bold"
			android:visibility = "gone" />

		<!--<ImageView-->
			<!--android:id = "@+id/tab_msg_mark"-->
			<!--android:layout_width = "wrap_content"-->
			<!--android:layout_height = "wrap_content"-->
			<!--android:layout_alignTop = "@+id/tab_normal"-->
			<!--android:layout_marginLeft = "-2dp"-->
			<!--android:layout_marginTop = "2dp"-->
			<!--android:layout_toRightOf = "@+id/tab_normal"-->
			<!--android:background = "@drawable/shape_oval_red"-->
			<!--android:gravity = "center"-->
			<!--android:minHeight = "8dp"-->
			<!--android:minWidth = "8dp"-->
			<!--android:visibility = "gone" />-->
	</RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">
	<LinearLayout
			android:id="@+id/item_comment_main"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="@drawable/selector_round_rect_solid_white"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:paddingTop="12dp"
			android:paddingBottom="12dp"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp">
		<TextView
				android:id="@+id/item_comment_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="农园食堂"
				android:textSize="16sp"
				android:textColor="@color/main_2"/>
		<RatingBar
				android:id="@+id/item_comment_rating"
				android:layout_width="wrap_content"
				android:layout_height="24dp"
				android:layout_marginTop="4dp"
				android:progressDrawable="@drawable/layer_ratingbar"
				android:rating="3"
				android:numStars="5"
				android:stepSize="0.1"
				android:isIndicator="true"/>
		<TextView
				android:id="@+id/item_comment_intro"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="我是全北大最大但最挤的食堂，二层比一层的饭好吃多了，但是一层人少,所以我也不知道我在写些神马"
				android:maxLines="2"
				android:ellipsize="end"/>
	</LinearLayout>

</LinearLayout>